@using Dissertation.Areas.Member.Models
@model ChatMessageViewModel

@{
    ViewData["Title"] = "Item Details";
}

<div class="container">
    <div class="row p-1">
        <div class="col-1">User</div>
        <div class="col-5"><input type="text" id="userInput" /></div>
    </div>
    <div class="row p-1">
        <div class="col-1">Message</div>
        <div class="col-5"><input type="text" class="w-100" id="messageInput" /></div>
    </div>
    <div class="row p-1">
        <div class="col-6 text-end">
            <input type="submit" id="sendButton" value="Send Message" />
        </div>
    </div>
    <div class="row p-1">
        <div class="col-6">
            <hr />
        </div>
    </div>
    <div class="row p-1">
        <div class="col-6">
            <ul id="messagesList">
                @foreach (var message in Model.Messages)
                {
                    <li>@Model.User.UserName says @message.messageContent</li>
                }
            </ul>
        </div>
    </div>
</div>
<script>
    var url = '@Url.Action("SendMessage", "Chat")';
    var chatId = @Model.Chat.Id;
    var userName = '@Model.User.UserName'
</script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/load-messages.js"></script>
<script src="~/js/chat.js"></script>