@model Dissertation.Models.Item

@{
    ViewData["Title"] = "Add Item";
}

<h1>Add Item</h1>

<h4>Item</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @*Creates a form prompting the use to enter all required information from the model*@
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-2">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="MaxDays" class="control-label"></label>
                <input asp-for="MaxDays" class="form-control" />
                <span asp-validation-for="MaxDays" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="TotalStock" class="control-label"></label>
                <input asp-for="TotalStock" class="form-control" />
                <span asp-validation-for="TotalStock" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Category" class="control-label"></label>
                <select asp-for="Category" class="form-control form-select" asp-items="Html.GetEnumSelectList<Dissertation.Models.Enums.ItemCategory>()"></select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label class="control-label">Upload Image</label>
                <input type="file" name="imageFile" class="form-control" />
                <span class="text-danger">@Html.ValidationMessage("ImageFile")</span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
